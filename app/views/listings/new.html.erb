<h1> Hello</h1>

    <%if @listing.errors.any?%>
        <% @listing.errors.full_messages.each do |message|%>
            <li><%= message%></li>
        <%end%>
    <%end%>
    

<%= form_with(model: @listing, local: true) do |form| %>
        <div>
            <%= form.label :title%>
            <%= form.text_field :title%>
        </div>

        <% @sexes.each do |option|%>
            <%= form.label "sex_#{option}".to_sym%>
            <%= form.radio_button :sex, option%>
        <%end%>




         <div>
            <%= form.label :breed_id%>  
            <%= form.select(:breed_id, @breeds.map{|b| [b.name, b.id]})%>
        </div>


        <div>
            <%= form.label :description%>
            <%= form.text_area :description%>
        </div>
        <div>
            <%= form.label :price%>
            <%= form.number_field :price, min: 0%>
        </div>
        <div>
            <%= form.label :deposit%>
            <%= form.number_field :deposit%>
        </div>
        <div>
            <%= form.label :city%>
            <%= form.text_field :city%>
        </div>
        <div>
            <%= form.label :state%>
            <%= form.text_field :state%>
        </div>
        <div>
            <%= form.label :date_of_birth%>
            <%= form.date_field :date_of_birth%>
        </div>

        <div>
            <%= form.label :diet%>
            <%= form.text_field :diet%>
        </div>


        <div>
            <%= form.label :picture%>
            <%= form.file_field :picture, accept: "image/png, image/gif, image/jpeg, image/jpg"%>
        </div>




        <div>
            <%= form.submit%>
        </div>
<%end%>